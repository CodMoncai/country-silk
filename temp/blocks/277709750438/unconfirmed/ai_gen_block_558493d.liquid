{% doc %}
  @prompt
    Add a block to where i can add in a custom metafield to play a video from vimeo
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-vimeo-video-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
  }

  .ai-vimeo-video-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
  }

  .ai-vimeo-video-iframe-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  .ai-vimeo-video-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-vimeo-video-placeholder-{{ ai_gen_id }} svg {
    width: 100px;
    height: 100px;
    opacity: 0.3;
  }

  .ai-vimeo-video-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }
{% endstyle %}

<div
  class="ai-vimeo-video-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-vimeo-video-wrapper-{{ ai_gen_id }}">
    {% if block.settings.vimeo_url != blank %}
      {% assign vimeo_id = block.settings.vimeo_url | split: '/' | last | split: '?' | first %}
      <iframe
        class="ai-vimeo-video-iframe-{{ ai_gen_id }}"
        src="https://player.vimeo.com/video/{{ vimeo_id }}?autoplay={{ block.settings.autoplay }}&loop={{ block.settings.loop }}&muted={{ block.settings.muted }}&controls={{ block.settings.show_controls }}"
        allow="autoplay; fullscreen; picture-in-picture"
        allowfullscreen
        loading="lazy"
        title="{{ block.settings.video_title }}"
      ></iframe>
    {% else %}
      <div class="ai-vimeo-video-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-vimeo-video-empty-state-{{ ai_gen_id }}">
          Next, add a Vimeo URL
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Vimeo video",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Video"
    },
    {
      "type": "text",
      "id": "vimeo_url",
      "label": "Vimeo URL",
      "info": "Enter the full Vimeo video URL (e.g., https://vimeo.com/123456789)"
    },
    {
      "type": "text",
      "id": "video_title",
      "label": "Video title",
      "default": "Vimeo video"
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    },
    {
      "type": "header",
      "content": "Playback"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay",
      "default": false,
      "info": "Video will play automatically when loaded"
    },
    {
      "type": "checkbox",
      "id": "loop",
      "label": "Loop video",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "muted",
      "label": "Mute video",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_controls",
      "label": "Show controls",
      "default": true
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Border radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Vimeo video"
    }
  ]
}
{% endschema %}
