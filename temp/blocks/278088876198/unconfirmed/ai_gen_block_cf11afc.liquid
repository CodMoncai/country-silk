{% doc %}
  @prompt
    Create a responsive Vimeo Video that grabs the custom metafield custom.video_theme and fills up the space as needed
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-vimeo-video-container-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    margin: 0 auto;
  }

  .ai-vimeo-video-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.aspect_ratio }}%;
    height: 0;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-vimeo-video-wrapper-{{ ai_gen_id }} iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }

  .ai-vimeo-video-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-vimeo-video-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-vimeo-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-vimeo-video-container-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<vimeo-video-{{ ai_gen_id }}
  class="ai-vimeo-video-container-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-vimeo-video-wrapper-{{ ai_gen_id }}">
    {% if product.metafields.custom.video_theme != blank %}
      {% assign vimeo_url = product.metafields.custom.video_theme %}
      {% assign video_id = vimeo_url | split: '/' | last | split: '?' | first %}
      
      <iframe
        src="https://player.vimeo.com/video/{{ video_id }}?autoplay={{ block.settings.autoplay }}&loop={{ block.settings.loop }}&muted={{ block.settings.muted }}&controls={{ block.settings.controls }}"
        allow="autoplay; fullscreen; picture-in-picture"
        allowfullscreen
        loading="lazy"
        title="Vimeo video player"
      ></iframe>
    {% else %}
      <div class="ai-vimeo-video-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-vimeo-empty-state-{{ ai_gen_id }}">
          Add a Vimeo URL to the custom.video_theme metafield
        </div>
      </div>
    {% endif %}
  </div>
</vimeo-video-{{ ai_gen_id }}>

{% schema %}
{
  "name": "Vimeo video",
  "settings": [
    {
      "type": "header",
      "content": "Video settings"
    },
    {
      "type": "paragraph",
      "content": "This block displays the Vimeo video from the product's custom.video_theme metafield."
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "loop",
      "label": "Loop video",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "muted",
      "label": "Mute video",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "controls",
      "label": "Show controls",
      "default": true
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    },
    {
      "type": "select",
      "id": "aspect_ratio",
      "label": "Aspect ratio",
      "options": [
        {
          "value": "56.25",
          "label": "16:9"
        },
        {
          "value": "75",
          "label": "4:3"
        },
        {
          "value": "100",
          "label": "1:1"
        },
        {
          "value": "177.78",
          "label": "9:16"
        }
      ],
      "default": "56.25"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Border radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "default": 0
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Vimeo video"
    }
  ]
}
{% endschema %}